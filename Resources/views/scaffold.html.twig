<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{{ ddr_gitki_name }}{% block ddr_gitki_title %}{% endblock ddr_gitki_title %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block ddr_gitki_stylesheet %}
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ddrgitki/css/gitki_screen.css') }}"
              media="screen" />
        <link rel="stylesheet" type="text/css"
              href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
              media="screen" />
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/ddrgitki/css/gitki_print.css') }}"
              media="print" />
    {% endblock ddr_gitki_stylesheet %}
</head>
<body class="{% block ddr_gitki_body_class %}{% endblock ddr_gitki_body_class %}">
{% block ddr_gitki_body %}
{% endblock ddr_gitki_body %}
{% block ddr_gitki_javascript %}
    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        /* Open certain links in new tabs */
        $('a[rel~=external]').attr('target', '_blank');
        $('a[rel~=newtab]').attr('target', '_blank');
    </script>
{% endblock ddr_gitki_javascript %}
</body>
</html>
